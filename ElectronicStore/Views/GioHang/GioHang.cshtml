@using ElectronicStore.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td>  Mã Sản Phảm </td>
        <td> Tên Sản Phẩm </td>
        <td> Hình Sản Phẩm </td>
        <td> Số Lượng </td>
        <td> Ðơn Giá </td>
        <td> Thành tiền </td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.iMaSP </td>
            <td> @item.sTenSP</td>
            <link href="~/Content/img.css" rel="stylesheet" />
            <td><img src="~/images/@item.sHinhSP" ,width="150px" , height="150px"></td>
            <td>@item.iSoLuong</td>
            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSanPham = item.iMaSP }))
            {
                <td>
                    <input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" style="background-color:snow;width:20%; border:1px solid rgba(0,0,0,0.1)" />
                </td>
                <td>@String.Format("{0:0,0}", item.dDonGia) </td>
                <td>@String.Format("{0:0,0}", item.dThanhTien) </td>
                <td> <a href="@Url.Action("Details", "ElectronicStore", new { id = item.iMaSP})"> Chi tiết </a></td>
                <td> @Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSanPham = item.iMaSP })</td>
                <td> <input type="submit"  value="Cập Nhật" /></td>
            }
        </tr>
    }
    <tr style="font-weight: bold; text-align:right; color:red">5
        <td colspan="4"> Số Lượng: @ViewBag.TongSoLuong </td>
        <td colspan="5"> Tổng Tiền: @String.Format("{0:0,0}", ViewBag.TongTien) VNÐ </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right ">
        <td colspan="9">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")
        </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="9" align="center">
            @Html.ActionLink("ĐẶT HÀNG","DatHang","GioHang")
        </td>
    </tr>
</table>

