@using ElectronicStore.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="0">
    <tr style="text-align:center; font-weight:bold">
        <td>  Mã Sản Phảm </td>
        <td> Tên Sản Phẩm </td>
        <td> Hình Sản Phẩm </td>
        <td> Số Lượng </td>
        <td> Ðơn Giá </td>
        <td> Thành tiền </td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
    <tr style="text-align:center; font-weight:bold">
        <td> @item.iMaSP </td>
        <td> @item.sTenSP</td>
        <td><img src="~/images/@item.sHinhSP" style="width:150px; height:150px"></td>

        @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSanPham = item.iMaSP }))
        {
            <td>
                <input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" style="background-color:snow;width:20%; border:1px solid rgba(0,0,0,0.1)" />
            </td>
            <td>@String.Format("{0:0,0}", item.dDonGia) </td>
            <td style="padding-left:20px">@String.Format("{0:0,0}", item.dThanhTien) </td>
            <td style="padding-left:20px">
                <a href="@Url.Action("Details","ElectronicStore", new { id = item.iMaSP })" class="btn btn-danger">Chi Tiết</a>
            </td>
            <td> <a href="@Url.Action("XoaGioHang" ,"GioHang",new { iMaSanPham = item.iMaSP })" class="btn btn-danger">Xóa</a></td>
            @*<td colspan="4"> <a href="@Url.Action("CapnhatGiohang","GioHang",new { iMaSanPham = item.iMaSP})" class="btn btn-danger">Cập Nhật</a></td>*@
            <td><input type="submit" value="Cập Nhật" class="btn btn-danger"/></td>
 
        }
    </tr>
    }
    <tr style="font-weight: bold; text-align:right; color:red">5
        <td colspan="4"> Số Lượng: @ViewBag.TongSoLuong </td>
        <td colspan="4"> Tổng Tiền: @String.Format("{0:0,0}", ViewBag.TongTien) VNÐ </td>
    </tr>
    <tr style="text-align:right ">
        <td colspan="6">
            <a href="@Url.Action("XoaTatcaGiohang","GioHang")" class="btn btn-danger">Xóa Tất Cả</a>
        </td>
        
    </tr>
    <td colspan="9" align="center">
            <a href="@Url.Action("DatHang","GioHang")" class="btn btn-danger">Đặt hàng</a>
    </td>
</table>

